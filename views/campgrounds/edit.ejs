<% layout('layout/boilerplate.ejs') %>   
    <div class="row">
        <h1 class="text-center">New Campgorund</h1>
        <div class="col-6 offset-3">
    
            <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" value="<%=camp.title%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" value="<%=camp.location%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" name="campground[image]" id="image" value="<%=camp.image%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">CampGround Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="number" id="price" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" value="<%=camp.price%>">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" rows="3" name="campground[description]" id="description"><%=camp.description%></textarea>
                </div>
                <button class="btn btn-info px-4">Submit</button>
            </form>
            <a href="/campgrounds/<%=camp._id%>">Back To CampGround</a>
        </div>
    </div>