<% layout('layout/boilerplate.ejs')%>
    <h1>ALL CampGrounds </h1>
<% for(let i of camps) {%>
    <div class="card">
        <div class="row">
            <div class="col-md-4">
                <img src="<%=i.images[0].url%>" alt="" class="img-fluid">
            </div>
            <div class="col-mg-8">
                <h3 class="card-title"><%=i.title%></h3>
                <p class="card-text"><%=i.description%></p>
                <p class="card-text">
                    <small class="text-muted"><%=i.location%></small>
                </p>
                <a class="btn btn-primary" href="/campgrounds/<%=i._id%>">View <%=i.title%></a>
            </div>
        </div>
    </div>
<% } %>
